<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <listener>
    <listener-class>jdbc.DBCPInitListener</listener-class>
  </listener>
  <context-param>
    <param-name>poolConfigFile</param-name>
    <param-value>/WEB-INF/dbConfig/db.properties</param-value>
  </context-param>
  <filter>
    <filter-name>encodingFilter</filter-name>
    <filter-class>filter.CharacterEncodingFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>encodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>LoginCheckFilter</filter-name>
    <filter-class>filter.LoginCheckFilter</filter-class>
  </filter>
  <servlet>
    <servlet-name>webPage</servlet-name>
    <servlet-class>common.controller.WebController</servlet-class>
    <init-param>
      <param-name>handlerConfigFile</param-name>
      <param-value>/WEB-INF/handlerConfig/commandHandler.properties</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>webPage</servlet-name>
    <url-pattern>/login</url-pattern>
    <url-pattern>/modify</url-pattern>
    <url-pattern>/join</url-pattern>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>
</web-app>